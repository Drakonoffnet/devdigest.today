                PublisherID: '225216805684543',
                PlacementID: '225216805684543',
                DivId: '',
                IAB_Category: 'IAB19',
                Keywords: '',
                Language: 'en-us',
                BG_Color: '',
                Text_Color: '',
                Font: 'Tahoma, Geneva, sans-serif',
